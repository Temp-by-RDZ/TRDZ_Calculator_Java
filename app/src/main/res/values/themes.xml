<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task02AS_Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Mega_font">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="B_Main">
        <item name="android:layout_marginBottom">@dimen/D_button_margin</item>
        <item name="android:backgroundTint">@color/Buttons_color</item>
        <item name="android:insetLeft">@dimen/B_cor</item>
        <item name="android:insetRight">@dimen/B_cor</item>
    </style>

    <style name="B_Main_l">
        <item name="android:layout_height">@dimen/little_lower</item>
        <item name="android:layout_marginBottom">@dimen/D_button_margin_l</item>
        <item name="android:backgroundTint">@color/Buttons_color</item>
        <item name="android:insetLeft">@dimen/B_cor</item>
        <item name="android:insetRight">@dimen/B_cor</item>
    </style>

    <style name="B_Small" parent="Widget.AppCompat.Button.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/D_button_margin</item>
        <item name="android:backgroundTint">@color/Buttons_color_2</item>
    </style>

    <style name="B_Small_l" parent="Widget.AppCompat.Button.Small">
        <item name="android:layout_height">@dimen/little_lower</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/D_button_margin_l</item>
        <item name="android:backgroundTint">@color/Buttons_color_2</item>
    </style>

    <style name="T_inMemory">
        <item name="android:fontFamily">@font/</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">@dimen/T_upBlock</item>
    </style>

    <style name="T_Memory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/Z_mem_marginT</item>
        <item name="android:layout_marginRight">@dimen/Z_mem_marginR</item>
        <item name="android:textSize">@dimen/T_upBlock</item>
        <item name="android:background">@color/Container_color</item>
    </style>

    <style name="T_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/D_button_margin</item>
        <item name="android:background">@color/Container_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/T_cont</item>
    </style>

    <style name="V_upBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Zero</item>
    </style>

    <style name="V_dwBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Zero</item>
        <item name="android:layout_margin">@dimen/R_down_margin</item>
    </style>
</resources>